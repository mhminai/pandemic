%\author{$for(author)$ $author.name$\vspace{0.05in} \\ \emph{$author.affiliation$} \\ \url{$author.email$}\vspace*{0.2in} \\ $sep$ \and $endfor$}
\author{$for(author)$ $author.name$ (\url{$author.email$}) \\ \emph{$author.affiliation$} \\ $sep$ \and $endfor$}
$endif$

